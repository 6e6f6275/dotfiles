#!/bin/bash

# Change directory
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

alias ~="cd ~"

# List
#alias ls='ls -G'
alias l='ls -CF -G'

# List
# long format
alias ll='ls -laF -G'


# Shell
alias reload="exec $SHELL -l"

# Shortcuts
alias e='emacsclient -t'
alias ke="emacsclient -e '(kill-emacs)'"

# peco
alias g='cd $(ghq root)/$(ghq list | peco)'
